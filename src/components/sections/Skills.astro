---
import Section from "../Section.astro";

import { skills } from "@cv"
---

<Section title="Skills">

    <ul>
        {
            skills.map(({name}) => (
                <li>
                    <span>{name}</span>
                </li>
            )) 
        }
    </ul>
</Section>

<style>
    ul {
        display: inline-flex;
        gap: 1.32px;
        flex-wrap: wrap;
    }

    li {
        border-radius: 6px;
        background: #37597e;
        color: rgb(255, 255, 255);
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }

    h4, h2, h1, h3 {
        text-align: center;
    }

</style>